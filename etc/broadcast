###########################

# Use this to broadcast a local file to many data sets

set -eu -o pipefail

start=984
end=1002

homedir=/home/cunningham.wi/projects/causets
basedir=/gss_gpfs_scratch/cunningham

sourcefile=$homedir/etc/action/action_single
dest=etc

for i in $(seq $start $end) ; do
  dir=$basedir/causet${i}
  cp $sourcefile $dir/$dest
done
