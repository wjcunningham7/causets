#!/bin/bash

###########################
#(C) Will Cunningham 2016 #
#         DK Lab          #
# Northeastern University #
###########################

# This script is used to make a table of k(t) for 
# spacetimes where there exists no theoretical expression

set -eu -o pipefail

# Spacetime ID
id=41508

# Version
ver=1

# Other relevant parameters
n=20480		# Number of nodes
platform=par-gpu-2

# Range of times
tmin=0.01
tmax=4.75
tstep=0.01

for i in $(seq ${tmin} ${tstep} ${tmax}) ; do
  echo "$i $($CAUSET_HOME_DIR/bin/CausalSet_${platform} --spacetime $id --nodes $n --age $i --slice 5.0 --link --gpu --core 1 | awk '/rad:/ {print $2}')" >> /tmp/adeg.tmp
done

cp /tmp/adeg.tmp .
etc/degtable $id $ver
mv /tmp/adeg.tmp $CAUSET_HOME_DIR/etc/tables/adeg_${id}_${ver}.tmp
